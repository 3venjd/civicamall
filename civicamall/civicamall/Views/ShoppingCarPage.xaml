<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:sp="clr-namespace:civicamall.ViewModels" xmlns:pv="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView" xmlns:Local="clr-namespace:civicamall.Controls"
             mc:Ignorable="d"
             NavigationPage.HasNavigationBar="False"
             x:Class="civicamall.Views.ShoppingCarPage">
    <ContentPage.BindingContext>
        <sp:StoreViewModel/>
    </ContentPage.BindingContext>
    <ScrollView>
        <Grid BackgroundColor="#F2EDF8">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>

            <Local:BackArrow Grid.Row="0" HorizontalOptions="Start"/>

            <Label Grid.Row="0" Text="Tus artículos" HorizontalOptions="Center" Margin="0,10,0,5" FontSize="Large" />

            <Local:Trash Grid.Row="0" VerticalOptions="Start" HorizontalOptions="End" HeightRequest="40" WidthRequest="40"/>

            <pv:PancakeView Grid.Row="1">
                <CollectionView SelectionMode="Single" Margin="24,10" HeightRequest="450" ItemsSource="{Binding ShopInCar}">
                    <CollectionView.ItemsLayout>
                        <GridItemsLayout Span="1" Orientation="Vertical" HorizontalItemSpacing="0" VerticalItemSpacing="0" />
                    </CollectionView.ItemsLayout>
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <pv:PancakeView Padding="0" HeightRequest="100" BackgroundColor="White">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0.2*"/>
                                        <ColumnDefinition Width="0.3*"/>
                                        <ColumnDefinition Width="0.1*"/>
                                        <ColumnDefinition Width="0.05*"/>
                                        <ColumnDefinition Width="0.1*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="20"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="1"/>
                                    </Grid.RowDefinitions>
                                    <pv:PancakeView Grid.Column="0" Grid.Row="0" Grid.RowSpan="4" CornerRadius="6" BackgroundColor="Red" Padding="0" Margin="5">
                                        <Image  Source="{Binding Image}" Aspect="Fill" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>
                                    </pv:PancakeView>
                                    
                                    <Label Grid.Column="1" Grid.Row="0" FontSize="Medium" TextColor="#2E2E2E" Margin="5,2,0,0" Text="{Binding Name}"/>
                                    <ImageButton Grid.Column="4" Grid.Row="0" Padding="-5" Source="clear_24px.png" Margin="0,16,8,0"
                                                 HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="24" WidthRequest="24" BackgroundColor="White"/>
                                    <Label Grid.Column="1" Grid.Row="1" TextColor="#3E4D4C" Text="{Binding Final_cost, StringFormat='{0:C}'}"/>
                                    
                                    <pv:PancakeView Grid.Column="1" Grid.Row="2" BackgroundColor="#00A09C" HorizontalOptions="StartAndExpand" VerticalOptions="Center"
                                                    HeightRequest="15" WidthRequest="78" CornerRadius="3" Padding="0" IsVisible="{Binding IsDiscount}">
                                        <Grid ColumnSpacing="0" Padding="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.3*"/>
                                                <ColumnDefinition Width="0.7*"/>
                                            </Grid.ColumnDefinitions>
                                            <Label Grid.Column="0" HorizontalTextAlignment="Center" FontSize="Micro" TextColor="White" Text="{Binding ShowDiscount}"/>
                                            <Label Grid.Column="1" HorizontalTextAlignment="Start" FontSize="Micro" TextColor="White" Text="Descuento"/>
                                        </Grid>
                                    </pv:PancakeView>

                                    <ImageButton Grid.Column="2" Grid.Row="2" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Padding="4" Source="add_gray_24px.png" HeightRequest="25" WidthRequest="25" BorderColor="LightGray" BorderWidth="0.2" BackgroundColor="White"/>
                                    <Label Grid.Column="3" Grid.Row="2" Text="1" HorizontalTextAlignment="Center"  VerticalTextAlignment="Center" WidthRequest="5"/>
                                    <ImageButton Grid.Column="4" Grid.Row="2" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" Padding="4" Source="remove_gray_24px.png" HeightRequest="25" WidthRequest="25" BorderColor="LightGray" BorderWidth="0.2" BackgroundColor="White" />
                                    <Label Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="4" BackgroundColor="#B6C1C8"/>
                                </Grid>
                            </pv:PancakeView>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>

                </CollectionView>
            </pv:PancakeView>

            <pv:PancakeView Grid.Row="2" Margin="24,0,24,10" Padding="0" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" HeightRequest="43" BackgroundColor="#3DAA35" CornerRadius="6">
                <Grid Padding="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" TextColor="White" Text="Pagar" BackgroundColor="#3DAA35"/>
                    <Label HorizontalOptions="CenterAndExpand" VerticalOptions="Center" Grid.Column="1" TextColor="White" Text="$200.000.000.000"/>
                </Grid>
                
            </pv:PancakeView>
            

        </Grid>
    </ScrollView>

</ContentPage>