<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:ip="clr-namespace:civicamall.ViewModels" 
             xmlns:Local="clr-namespace:civicamall.Controls" 
             xmlns:Pk="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
             NavigationPage.HasNavigationBar="False"
             mc:Ignorable="d"
             x:Class="civicamall.Views.WishesPages">
    <ContentPage.BindingContext>
        <ip:MenuPageViewModel />
    </ContentPage.BindingContext>
    <Grid BackgroundColor="#F2EDF8">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.6*"/>
            <RowDefinition Height="0.05*"/>
            <RowDefinition Height="0.35*"/>
        </Grid.RowDefinitions>
        <Local:BackArrow Grid.Row="0" HorizontalOptions="Start" Margin="0"/>
        <Local:ShoppingCart Grid.Row="0" HorizontalOptions="End" Margin="0"/>
        <Label Grid.Row="0" HorizontalOptions="Center" VerticalOptions="Center" FontAttributes="Bold" FontSize="Medium" TextColor="Black" Text="Tus deseados" />

        <Pk:PancakeView Grid.Row="1" BackgroundColor="White" Margin="16,0" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>
                <Image Grid.Row="0" Source="Lista_de_deseados.png" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Label Grid.Row="1" Text="Añade los productos con el icono del corazón" HorizontalOptions="Center" Margin="0,20,0,0"/>
                <ImageButton Grid.Row="2" HorizontalOptions="Center" VerticalOptions="Center" HeightRequest="40" WidthRequest="40" CornerRadius="60"
                             Margin="0,0,0,24" BorderColor="#7E2081" BorderWidth="1" BackgroundColor="white" Padding="11" Source="favorite_purple_24px.png"/>
            </Grid>

        </Pk:PancakeView>
        <Label Grid.Row="2" FontAttributes="Bold" FontSize="Medium" Margin="24,0" TextColor="Black" Text="Quizá te interese ..." HorizontalOptions="Start" VerticalOptions="Center" />

        <CollectionView
                Grid.Row="3"
                Margin="24,0,24,10"
                HeightRequest="200"
                SelectionMode="Single"
                ItemsSource="{Binding Products}"
                SelectionChangedCommand="{Binding GoToNotAvailableCommand}">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Horizontal" ItemSpacing="10" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Pk:PancakeView
                            Padding="0"
                            BackgroundColor="White"
                            CornerRadius="0,0,6,6"
                            IsClippedToBounds="False"
                            WidthRequest="150">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0.7*" />
                                <ColumnDefinition Width="0.3*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.7*" />
                                <RowDefinition Height="0.15*" />
                                <RowDefinition Height="0.15*" />
                            </Grid.RowDefinitions>
                            <Image
                                    Grid.Row="0"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="2"
                                    Aspect="AspectFill"
                                    Source="{Binding Image}" />
                            <Label
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Margin="6,0,0,0"
                                    FontSize="Medium"
                                    TextColor="#7E2081"
                                    Text="{Binding Name}" />
                            <Label
                                    Grid.Row="2"
                                    Grid.Column="0"
                                    Margin="6,0,0,0"
                                    Text="{Binding Final_cost, StringFormat='{0:C}'}" />

                            <ImageButton
                                    Grid.Row="1"
                                    Grid.RowSpan="2"
                                    Grid.Column="1"
                                    Margin="0,0,1,0"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    HeightRequest="40"
                                    WidthRequest="40"
                                    CornerRadius="60"
                                    BorderColor="#7E2081"
                                    BorderWidth="1"
                                    BackgroundColor="White"
                                    IsVisible="True"
                                    Padding="11"
                                    Source="favorite_purple_24px.png" />
                            <ImageButton
                                    Grid.Row="1"
                                    Grid.RowSpan="2"
                                    Grid.Column="1"
                                    Margin="0,0,1,0"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center"
                                    HeightRequest="40"
                                    WidthRequest="40"
                                    CornerRadius="60"
                                    BorderColor="#7E2081"
                                    BorderWidth="1"
                                    BackgroundColor="#7E2081"
                                    IsVisible="{Binding IsFavorite}"
                                    Padding="11"
                                    Source="favorite_white_24px.png" />
                        </Grid>
                    </Pk:PancakeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>

    </Grid>
</ContentPage>